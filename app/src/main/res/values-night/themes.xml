<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordReminder" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DA1212</item>
        <item name="colorPrimaryVariant">#DA1212</item>
        <item name="colorOnPrimary">#DA1212</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Launcher" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">#DA1212</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


</resources>